<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Masukkan dua angka"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/angka_pertama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Masukkan angka pertama"
        android:inputType="number"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/angka_kedua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angka_pertama"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Masukkan angka kedua"
        android:inputType="number" />

    <Button
        android:id="@+id/tambah"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/angka_kedua"
        android:layout_marginTop="18dp"
        android:text="+" />

    <Button
        android:id="@+id/kurang"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tambah"
        android:layout_alignBottom="@id/tambah"
        android:layout_toEndOf="@id/tambah"
        android:text="-" />

    <Button
        android:id="@+id/kali"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/kurang"
        android:layout_alignBottom="@id/kurang"
        android:layout_toEndOf="@id/kurang"
        android:text="x" />

    <Button
        android:id="@+id/bagi"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/kali"
        android:layout_alignBottom="@id/kali"
        android:layout_toEndOf="@id/kali"
        android:text="/" />

    <Button
        android:id="@+id/bersihkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tambah"
        android:layout_marginTop="18dp"
        android:text="Bersihkan" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bersihkan"
        android:layout_marginTop="35dp"
        android:text="Hasil"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:text="0"
        android:textAlignment="center"
        android:textSize="36sp" />

</RelativeLayout>